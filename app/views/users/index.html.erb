<div class="banner">
  <div class="container">

    <div class="row d-flex justify-content-between">
      <div class="col-lg-6">
        <h1><strong>SOUNDMATES</strong></h1>
        <p>Find your fellow creatives</p>
      </div>
      <div class="col-lg-6">
        <%= form_tag users_path, method: :get, class: "form-inline" do %>
          <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find creatives"%>
          <h5><%= link_to "Search", users_path %></h5>
        <% end %>
      </div>
    </div>
  </div> 
</div>
<div class="container">
  
  <div class="row text-white justify-content-center my-3 font-weight-bold">
    <h2 class=" font-weight-bold">Find your next sound mate</h2>
  </div>

  <!-- if no search params entered, then show our 3 user cards -->
  <% if !params[:query] %>
    <div class="row my-5 justify-content-between">
      <% @users.each do |user| %>
        <div class="col-12 col-lg-6 col-xl-6 d-flex justify-content-center my-3">
          <div class="card p-3">
            <div class="d-flex align-items-center">
              <div class="image">
                <% if user.photo.attached? %>
                  <%= cl_image_tag user.photo.key, alt: "Profile picture", width: 155, height: 155, crop: :fill, class: "rounded" %>
                <% else %>
                  <%= cl_image_tag("no-photo.jpg_xfimyh", width: 155, height: 155, crop: :fill, class: "rounded") %>
                <% end%>
              </div>
                <div class="ml-3 w-100">
                  <h4 class="mb-0 mt-0 text-white"><%= user.first_name %></h4> <span class="text-white"> <%= user.skills.first.name %></span>
                <div class="button mt-2 d-flex flex-row align-items-center"> <button class="btn btn-sm btn-outline-primary w-100"> <%= link_to "See Profile", user_path(user.username) %> </button> </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

    <!-- if search params entered, then show our user card results to query -->
  <% if params[:query] %>
    <div class="row my-5 justify-content-between">
      <% @users.each do |user| %>
        <%= render "user_card", user: user %>
      <% end %>
    </div>
  <% end %>

  <% if !params[:query] %>
    <div class="row text-white justify-content-center my-3">
      <h2  class=" font-weight-bold">Browse by music genre </h2>
    </div>
  <% end %>

  <!-- if no search params entered, show carousal and genre category links  -->
  <% if !params[:query] %>
    <div class="row my-5 justify-content-center">
      <div id="carouselExampleControls" class="carousel slide my-4" data-ride="carousel">
        <div class="carousel-inner">
          <%= link_to hiphop_users_path do %>
            <div class="carousel-item active">
              <%= image_tag "hiphop.jpg", class: "d-block w-100 carousel-image", alt: "First slide"%>
              <div class="carousel-caption d-none d-md-block">
                <h5><%= link_to "Hip-Hop heads", hiphop_users_path %></h5>
              </div>
            </div>
          <% end %>
          <%= link_to rock_users_path do %>
            <div class="carousel-item">
              <%= image_tag "rock.jpg", class: "d-block w-100 carousel-image", alt: "Second slide"%>
              <div class="carousel-caption d-none d-md-block">
                <h5><%= link_to "Rock heads", rock_users_path %></h5>
              </div>
            </div>
          <% end %>
          <%= link_to jazz_users_path do %>
            <div class="carousel-item">
              <%= image_tag "jazz.jpg", class: "d-block w-100 carousel-image", alt: "Third slide"%>
              <div class="carousel-caption d-none d-md-block">
                <h5><%= link_to "Jazz heads", jazz_users_path %></h5>
              </div>
            </div>
          <% end %>
          <%= link_to funk_users_path do %>
            <div class="carousel-item">
              <%= image_tag "funk.jpg", class: "d-block w-100 carousel-image", alt: "Fourth slide"%>
              <div class="carousel-caption d-none d-md-block">
                <h5><%= link_to "Funk aficionados", funk_users_path %></h5>
              </div>
            </div>
          <% end %>
          <%= link_to electronic_users_path do %>
            <div class="carousel-item">
              <%= image_tag "electronic.jpg", class: "d-block w-100 carousel-image", alt: "Fifth slide"%>
              <div class="carousel-caption d-none d-md-block">
                <h5><%= link_to "Electronic music lovers", electronic_users_path %></h5>
              </div>
            </div>
          <% end %>

        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <div class="row text-white justify-content-center my-3">
      <h2 class="font-weight-bold">Find the skill you need </h2>
    </div>
    <div class="row justify-content-center my-5">
      <div class="col-6 col-md-6 col-lg-3 col-xl-3 d-flex justify-content-center">
        <%= link_to instrumentalists_users_path do %>
          <div class="circular-card d-flex align-items-center justify-content-center" id="instrumentalists">
            <p>Instrumentalists</p>
          </div>
        <% end %>
      </div>
      <div class="col-6 col-md-6 col-lg-3 col-xl-3 d-flex justify-content-center">
        <%= link_to vocalists_users_path do %>
          <div class="circular-card d-flex align-items-center justify-content-center" id="vocalists">
            <p>Vocalists</p>
          </div>
        <% end %>
      </div>
      <div class="col-6 col-md-6 col-lg-3 col-xl-3 d-flex justify-content-center">
        <%= link_to technicians_users_path do %>
          <div class="circular-card d-flex align-items-center justify-content-center" id="technicians">
            <p>Technicians</p>
          </div>
        <% end %>
      </div>
      <div class="col-6 col-md-6 col-lg-3 col-xl-3 d-flex justify-content-center">
        <%= link_to djs_users_path do %>
          <div class="circular-card d-flex align-items-center justify-content-center" id="djs">
            <p>DJs</p>
          </div>
        <% end %>
      </div>
    </div>
    <% end %>
</div>
