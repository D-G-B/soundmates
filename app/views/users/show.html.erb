<!--Modal-->
<div class="modal" tabindex="-1" role="dialog" id="modalPhoto">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Upload a photo</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="photo-form">
          <%=simple_form_for @user, url: add_photo_user_path(@user.username), method: :patch do |f| %>
            <%= f.input :photo, as: :file %>
            <%= f.button :submit %>
          <%end %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Save changes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<!--Modal end-->


<div class="container" id="text-white">
  <div class="row banner-dark">
    <div class="d-flex flex-column align-items-start justify-content-end py-3 ml-3">
      <% if @user.photo.attached? %>
        <%= cl_image_tag @user.photo.key, alt: "Profile picture", height: 200, width: 200, crop: :fill, class: "profile-image" %>
      <% else %>
        <%= cl_image_tag("no-photo.jpg_xfimyh", height: 200, width: 200, crop: :fill, class: "profile-image") %>
      <% end%>
      <button type="button" data-toggle="modal" data-target="#modalPhoto" class="btn-orange-long my-3">Upload Photo</button>
    </div>

    <div class="d-flex flex-column align-items-center justify-content-center ml-3">
      <div id="username">
        <%= @user.first_name %>
      </div>
      <div>
        <% @user.genres.each do |genre| %>
          #
          <%= genre.name%>
        <%end %>
      </div>
    </div>
  </div>

  <div class="row d-flex justify-content-end align-items-start py-5">
    
    <div class="col-lg-2" id="mates">
      <h5>Mates</h5>
    </div>
    <div class="col-lg-2" id="shares">
      <h5>Shares</h5>
    </div>
    <div class="col-lg-4 d-flex justify-content-center">
      <div class="chatroom-buttons">
        <% if current_user && @chatroom %>
          <p>Already Connected</p>
          <%= link_to "your chatrooms", chatrooms_path %>
        <% else %>
          <h5><%= link_to "CONNECT",user_chatrooms_path(@user.username), method: :post, class: "" %></h5>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="row my-3">
    <div class="col">
      <h3>About</h3>
      <p><%= @user.bio %></p>
    </div>
  </div>

  <div class="row my-3">
    <div class="col">
      <h2>Skills</h2>
        <% @user.skills.each do |skill| %>
          <%= skill.name%>
        <%end %>
    </div>
  </div>

  <div class="row my-3">
    <div class="col">
      <h2>Shares</h2>
      <% @user.shares.each do |share| %>
        <%= share.link %>
        <%= share.platform %>
      <% end %>
    </div>
  </div>
</div>
