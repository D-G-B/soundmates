<div class="container" id="text-white">
  <div class="row ">
    <div class="col-lg-4">
      <img class="avatar-profile" src="https://images.unsplash.com/photo-1561055657-b9e0bf0fa360?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=668&q=80">
    </div>
    <div class="col-lg-4">
      <div id="username">
        <%= @user.username %>
      </div>
      <% @user.genres.each do |genre| %>
      #
      <%= genre.name%>
        <%end %>
    </div>
    <div class="col-lg-4 d-flex">
      <div id="mates">
        Mates
      </div>
      <div id="shares">
        Shares
      </div>
      <%= link_to "CONNECT", class: "btn btn-primary" %>
    </div>
  </div>
  <div class="row" id="info">
    <h2>Bio</h2>
    <br>
    <br>
    <%= @user.bio %>
  </div>
  <div class="row"id="info">
    <h2>Skills</h2>
    <br>
    <br>
    <% @user.skills.each do |skill| %>
      <%= skill.name%>
      <%end %>
  </div>
  <div class="row"id="info">
    <h2>Shares</h2>
    <br>
    <br>
    <% @user.shares.each do |share| %>
    <%= share.link %>
    <br>
    <%= share.platform %>
    <% end %>
  </div>
</div>
