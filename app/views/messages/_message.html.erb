
<div class="message-container" id="message-<%= message.id %>">
  
  <% if message.user == current_user %>
    <div class="container d-flex flex-row-reverse"> 
      <%= cl_image_tag current_user.photo.key, alt: "Profile picture", width: 40, height: 40, crop: :fill, class: "avatar chat-avatar rounded-circle ml-3" %>
  <% else %> 
    <div class="container d-flex"> 
      <%= cl_image_tag message.user.photo.key, alt: "Profile picture", width: 40, height: 40, crop: :fill, class: "avatar chat-avatar rounded-circle mr-3 flex-column-reverse" %>
  <% end %>

    <% if message.user == current_user %>
    <div class="arrow-right"></div>
    <div class="chat-card-user card-body card text-white bg-dark mb-3" style="max-width: 40rem;" id="color-current-user">
    <% else %>
    <div class="arrow-left"></div>
    <div class="chat-card-other card-body card text-white bg-dark mb-3" style="max-width: 40rem;">
    <% end %>
      <blockquote class="blockquote mb-0">
        <p id="message-<%= message.id %>"><%= message.content %></p>
          <footer class="blockquote-footer">
            <cite title="Source Title">
              <i class="author">
                <span><%= message.user.username %></span>
                <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
              </i>
            </cite>
          </footer>
      </blockquote>
    </div> <%# message box left %>  
  </div> <%# message box right %> 
 </div> <%# message container %>


