<div class="navbar navbar-expand-sm navbar-light navbar-lewagon ">
  <%= link_to users_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png", class: "logo" %>
  <% end %>

  <div class="input-group" style="justify-content: center;">
    <span class="search-style input-group-append">
      <%= form_tag users_path(anchor: "search"), method: :get, class: "form-inline", style: "justify-content: center" do %>
      <%= text_field_tag :query, params[:query], class: "form-control py-2", type: "search", placeholder: "Find creatives"%>
        <button class="btn btn-outline-secondary" type="submit">
          <i class="fa fa-search"></i>
        </button>
    </span>
    <% if params[:query] %>
      <div class="btn-ghost">
        <h5><%= link_to "All users", users_path %></h5>
      </div>
    <% end %>
    <% end %>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="dropdown">
    <button class="dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Skills
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <%= link_to "Remixers", skills_users_path(query:"remix"), class: "dropdown-item" %>
      <%= link_to "Vocalists", skills_users_path(query:"vocals"), class: "dropdown-item" %>
      <%= link_to "Instrumentalists", skills_users_path(query:"instruments"), class: "dropdown-item" %>
      <%= link_to "Writers", skills_users_path(query:"writing"), class: "dropdown-item" %>
      <%= link_to "Arranger", skills_users_path(query:"arrangement"), class: "dropdown-item" %>
      <%= link_to "Producers", skills_users_path(query:"production"), class: "dropdown-item" %>
      <%= link_to "Technicians", skills_users_path(query:"technical"), class: "dropdown-item" %>
      <%= link_to "Designers", skills_users_path(query:"visuals"), class: "dropdown-item" %>
      <%= link_to "DJs", skills_users_path(query:"dj_mix"), class: "dropdown-item" %>
      <%= link_to "Managers", skills_users_path(query:"management"), class: "dropdown-item" %>
      <%= link_to "Conductors", skills_users_path(query:"conducting_&_leading"), class: "dropdown-item" %>
      <%= link_to "Actors", skills_users_path(query:"acting,_literary_&_spoken"), class: "dropdown-item" %>
    </div>
  </div>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, alt: "Profile picture", width: 70, height: 70, crop: :fill, class: "avatar-navbar", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false  %>
          <% else %> 
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
